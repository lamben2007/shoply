generator client {
  provider = "prisma-client"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model Product {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  slug         String   @unique
  description  String?
  price        Decimal  @db.Decimal(10, 2)
  imageUrl     String
  imagePreview String
  stock        Int      @default(10)
  createdAt    DateTime @default(now()) @map("created_at")

  orderItems OrderItem[]

  @@map("products")
  @@schema("public")
}

model Order {
  id     String      @id @default(uuid()) @db.Uuid
  userId String?     @db.Uuid
  status OrderStatus @default(PENDING)
  total  Decimal     @db.Decimal(10, 2)

  shippingId String  @db.Uuid
  shipping   Address @relation("OrderShipping", fields: [shippingId], references: [id])

  billingId String?  @db.Uuid
  billing   Address? @relation("OrderBilling", fields: [billingId], references: [id])

  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
  @@schema("public")
}

model OrderItem {
  id String @id @default(uuid()) @db.Uuid

  orderId String @db.Uuid
  order   Order  @relation(fields: [orderId], references: [id])

  productId String?  @db.Uuid
  product   Product? @relation(fields: [productId], references: [id])

  name     String
  price    Decimal @db.Decimal(10, 2)
  quantity Int
  imageUrl String?

  @@map("order_items")
  @@schema("public")
}

model Address {
  id         String   @id @default(uuid()) @db.Uuid
  profileId  String?  @db.Uuid
  profile    Profile? @relation(fields: [profileId], references: [id])
  name       String
  street     String
  zip        String
  city       String
  country    String
  complement String?

  isDefaultShipping Boolean @default(false)
  isDefaultBilling  Boolean @default(false)

  shippingOrders Order[] @relation("OrderShipping")
  billingOrders  Order[] @relation("OrderBilling")

  @@map("addresses")
  @@schema("public")
}

model Profile {
  id        String  @id @default(uuid()) @db.Uuid
  firstName String?
  lastName  String?

  addresses Address[] // Relation avec Address

  @@map("profiles")
  @@schema("public")
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  CANCELLED
  COMPLETED

  @@schema("public")
}
